    <script>
        document.getElementById('serviceForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const statusMessage = document.getElementById('statusMessage');
            const statusIcon = document.getElementById('statusIcon');
            const statusText = document.getElementById('statusText');
            
            // Show loading state
            statusMessage.className = 'mt-6 p-4 rounded-lg bg-blue-50 border border-blue-200';
            statusIcon.innerHTML = '<div class="animate-spin rounded-full h-5 w-5 border-b-2 border-blue-600"></div>';
            statusText.innerHTML = '<span class="text-blue-800">Mengirim data ke Google Sheets...</span>';
            statusMessage.classList.remove('hidden');
            
            // Get form data
            const formData = new FormData(this);
            const data = {};
            for (let [key, value] of formData.entries()) {
                data[key] = value;
            }
            
            // Add timestamp
            data.timestamp = new Date().toLocaleString('id-ID');
            
            // Simulate API call (replace with actual Google Apps Script URL)
            setTimeout(() => {
                // Success simulation
                statusMessage.className = 'mt-6 p-4 rounded-lg bg-green-50 border border-green-200';
                statusIcon.innerHTML = '<svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>';
                statusText.innerHTML = '<span class="text-green-800 font-medium">Berhasil!</span><br><span class="text-green-700 text-sm">Permintaan service Anda telah dikirim. Tim kami akan menghubungi Anda segera.</span>';
                
                // Reset form
                this.reset();
                
                // Log data (for demo purposes)
                console.log('Data yang akan dikirim ke Google Sheets:', data);
            }, 2000);
            
            // For actual implementation, use this structure:
            /*
            fetch('https://script.google.com/macros/s/AKfycbzK8xS0Ypyn2E_WAnjVbZs6YZnbwmaTvgmrPsCtMgOqvZs9mbr4xQlUXW5hei4nBHSO/exec', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(result => {
                if (result.success) {
                    statusMessage.className = 'mt-6 p-4 rounded-lg bg-green-50 border border-green-200';
